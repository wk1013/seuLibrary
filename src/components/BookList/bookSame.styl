.book_listItem
  padding: 20px;
  background: #fff;
  .top
    font-size: 28px;
  .bottom
    font-size: 24px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    .b-left
      margin-right:15px;
      .img
        width: 130px;
        height: auto;
    .b-right
      .at-icon
        font-size: 50px;
        color: #3c3c3c;  
    .b-center
      width: 70%;
      color:#a4a4a4;
      .info
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;  
        width:100%;
        .richtext
          display inline;
  &:active
    background: #f0f0f0;
      


      

