.newsList
  padding: 20px 20px;
  .newsItem
    border-bottom: 1px solid #ccc;
    padding: 30px;
    .title
      font-size: 28px;
      word-wrap: break-word;
      width: 100%;
      margin-bottom: 20px;
      a
        color: #5CAAFD;
    .time
      font-size: 24px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;   
      color: #9f9f9f 
      .richText
        display: inline-block;
        


      

